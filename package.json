{
  "name": "ts-webdev-starter",
  "version": "0.0.2",
  "description": "This is a simple boilerplate for Web Development using Typescript",
  "author": "Nathaniel Riehl",
  "license": "MIT",
  "scripts": {
    "prestart": "ts-node utils/build/startMessage.ts",
    "start": "npm-run-all --parallel dev:server lint:watch test:watch mockapi:start",
    "dev:server": "ts-node utils/build/devServer.js",
    "lint": "tslint -c tslint.json -t verbose webpack.config.* src/**/*.[tj]s utils/**/*.[tj]s",
    "lint:watch": "chokidar webpack.config.* src/**/*.[tj]s utils/build/**/*.[tj]s -c \"npm run lint\" --initial --verbose",
    "test": "mocha --require ts-node/register --reporter nyan \"src/**/*.test.{js,ts}\"",
    "test:watch": "npm run test -- --watch --watch-extensions js,ts",
    "mockapi:generate": "ts-node utils/build/genMockData.js",
    "premockapi:start": "npm run mockapi:generate",
    "mockapi:start": "json-server --watch src/api/db.json --port 3001",
    "clean:dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean:dist test lint",
    "build": "ts-node utils/build/build.js",
    "postbuild": "ts-node utils/build/prodServer.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BlauDrachen/ts-webdev-starter.git"
  },
  "bugs": {
    "url": "https://github.com/BlauDrachen/ts-webdev-starter/issues"
  },
  "homepage": "https://github.com/BlauDrachen/ts-webdev-starter",
  "dependencies": {
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.23",
    "@types/webpack": "^4.4.24",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "chokidar-cli": "^1.2.1",
    "clean-webpack-plugin": "^1.0.1",
    "compression": "^1.7.3",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "express": "^4.16.4",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.11",
    "jsdom": "^13.2.0",
    "json-schema-faker": "0.5.0-rc16",
    "json-server": "^0.14.2",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^5.2.0",
    "mocha-jsdom": "^2.0.0",
    "nock": "^10.0.6",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "offline-plugin": "^5.0.6",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.1",
    "webpack": "^4.29.3",
    "webpack-dev-middleware": "^3.5.2",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-md5-hash": "^0.0.6",
    "webpack-merge": "^4.2.1"
  }
}
